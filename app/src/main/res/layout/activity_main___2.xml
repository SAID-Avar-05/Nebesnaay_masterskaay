<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity__2">


    <!-- Верхний тулбар -->
    <ImageView
        android:id="@+id/menuIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/Tri_linii_menu"/>

    <TextView
        android:id="@+id/toolbarTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Сообщения"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/menuIcon"
        app:layout_constraintBottom_toBottomOf="@id/menuIcon"
        app:layout_constraintStart_toEndOf="@id/menuIcon"
        app:layout_constraintEnd_toStartOf="@id/searchIcon"/>

    <ImageView
        android:id="@+id/searchIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="@id/menuIcon"
        app:layout_constraintEnd_toStartOf="@id/moreIcon"
        android:layout_marginEnd="8dp"
        android:src="@drawable/Lupa_poiska" />

    <ImageView
        android:id="@+id/moreIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="@id/menuIcon"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:src="@drawable/Tri_Tochki"/>

    <!-- Фильтры кнопок -->
    <LinearLayout
        android:id="@+id/filterLayout"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/menuIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <Button
            android:id="@+id/button_all"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="Все"
            android:textColor="#DDDDDD"
            android:textSize="14sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginEnd="8dp"
            android:minWidth="72dp" />

        <Button
            android:id="@+id/button_read"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="Прочитанные"
            android:textColor="#2196F3"
            android:textSize="14sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/bg_filter_unselected"

            android:layout_marginEnd="8dp"
            android:minWidth="96dp" />

        <Button
            android:id="@+id/button_unread"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="Непрочитанные"
            android:textColor="#2196F3"
            android:textSize="14sp"
            android:background="@drawable/bg_filter_unselected"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:minWidth="96dp" />
    </LinearLayout>

    <!-- Список сообщений-заполнителей -->
    <LinearLayout
        android:id="@+id/messagesContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:weightSum="3"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filterLayout">


        <View
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="12dp"
            android:background="#DDDDDD"

            android:clipToOutline="true"
            android:elevation="2dp"
            android:outlineProvider="background" />

        <View
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="12dp"

            android:background="#DDDDDD"
            android:clipToOutline="true"
            android:elevation="2dp"
            android:outlineProvider="background" />

        <View
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="12dp"

            android:background="#DDDDDD"
            android:clipToOutline="true"
            android:elevation="2dp"
            android:outlineProvider="background"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="116dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#DDDDDD"


            android:clipToOutline="true"
            android:elevation="2dp"
            android:outlineProvider="background" />


    </LinearLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:itemIconTint="@color/bottom_nav_colors"
        app:itemTextColor="@color/bottom_nav_colors"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/knopki_snizu" />



</androidx.constraintlayout.widget.ConstraintLayout>